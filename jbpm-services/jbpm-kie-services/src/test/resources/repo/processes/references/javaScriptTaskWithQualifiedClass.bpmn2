             xmlns:tns="http://www.jboss.org/drools">


  <itemDefinition id="_personItem" structureRef="Object" />

  <process processType="Private" isExecutable="true" id="org.jbpm.kie.test.references.qualified.java" name="ScriptTask Process" tns:packageName="com.sample" >

    <property id="person" itemSubjectRef="_personItem"/>
   
    <extensionElements>
     <tns:import name="org.jbpm.kie.test.objects.Thing" />
    </extensionElements>
     
    <!-- nodes -->
    <startEvent id="_1" name="StartProcess" />
    <scriptTask id="_2" name="Hello" scriptFormat="http://www.java.com/java" >
      <script>org.jbpm.kie.test.objects.Person per = (org.jbpm.kie.test.objects.Person) kcontext.getVariable("person"); 
              per.addLog("Hello " + per.getName());
              org.jbpm.kie.test.objects.OtherPerson othPer = new org.jbpm.kie.test.objects.OtherPerson(per);
              Object thatThing = new Thing();</script>
    </scriptTask>
    <endEvent id="_3" name="EndProcess" >
        <terminateEventDefinition/>
    </endEvent>

    <!-- connections -->
    <sequenceFlow id="_1-_2" sourceRef="_1" targetRef="_2" />
    <sequenceFlow id="_2-_3" sourceRef="_2" targetRef="_3" />

  </process>

  <bpmndi:BPMNDiagram>
    <bpmndi:BPMNPlane bpmnElement="org.jbpm.kie.test.references.qualified">
      <bpmndi:BPMNShape bpmnElement="_1" >
        <dc:Bounds x="16" y="16" width="48" height="48" />
      </bpmndi:BPMNShape>
      <bpmndi:BPMNShape bpmnElement="_2" >
        <dc:Bounds x="96" y="16" width="80" height="48" />
      </bpmndi:BPMNShape>
      <bpmndi:BPMNShape bpmnElement="_3" >
        <dc:Bounds x="208" y="16" width="48" height="48" />
      </bpmndi:BPMNShape>
      <bpmndi:BPMNEdge bpmnElement="_1-_2" >
        <di:waypoint x="40" y="40" />
        <di:waypoint x="136" y="40" />
      </bpmndi:BPMNEdge>
      <bpmndi:BPMNEdge bpmnElement="_2-_3" >
        <di:waypoint x="136" y="40" />
        <di:waypoint x="232" y="40" />
      </bpmndi:BPMNEdge>
    </bpmndi:BPMNPlane>
  </bpmndi:BPMNDiagram>

</definitions>